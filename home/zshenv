typeset -U PATH
export PATH="$HOME/.local/bin:$PATH"
export EDITOR=nvim

if uname | grep -qi Darwin; then
    eval "$(/opt/homebrew/bin/brew shellenv)"
fi

## Version manager
if (( $+commands[pyenv] )); then
    eval "$(pyenv init -)"
    # eval "$(pyenv virtualenv-init -)"
else
    echo "can't find pyenv"
fi


### Addition config

if (( $+commands[go] )); then
    PATH="$PATH:$HOME/go/bin"
	export GOPROXY=https://goproxy.cn
fi

if (( $+commands[cargo] )); then
    PATH="$PATH:$HOME/.cargo/bin"
fi

PATH="$PATH:$HOME/.local/share/pnpm"

PATH="$PATH:$HOME/.bun/bin"




if [ -z "$CI" ] && [ -z "$GITHUB_ACTIONS" ] && [ -z "$GITLAB_CI" ] && [ -z "$TRAVIS" ]; then
    export bwBindPar=$HOME/Downloads/

    export NLTK_DATA=$HOME/Documents/nltk_data

    export HF_ENDPOINT=https://hf-mirror.com
    
    export NVM_NODEJS_ORG_MIRROR=https://npmmirror.com/mirrors/node
    export PYTHON_BUILD_MIRROR_URL=https://pyenv-mirror.vercel.app/api/pythons/
    export RUSTUP_UPDATE_ROOT=https://mirrors.tuna.tsinghua.edu.cn/rustup/rustup
    export RUSTUP_DIST_SERVER=https://mirrors.tuna.tsinghua.edu.cn/rustup
fi


### Local config
[[ ! -f ~/.zshenv.local ]] || source ~/.zshenv.local
