[credential]
    helper = store

[commit]
    verbose = true

[core]
    autocrlf = input
	longpaths = true

[help]
    autocorrect = 20

[alias]
    changes = "log -M -L"

[push]
    autoSetupRemote = true

[pull]
    rebase = true

[merge]
    conflictstyle = diff3


[init]
    defaultBranch = master

[include]
    path = ~/.config/git/local.inc

[includeIf "hasconfig:remote.*.url:git@github.com:*/*"]
    path = github.inc


[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
