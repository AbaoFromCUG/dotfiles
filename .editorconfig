root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
max_line_length = 150

[*.sh]
indent_style = tab
max_line_length = 150
indent_size = 4
function_next_line = true

[*.lua]
# https://github.com/CppCXY/EmmyLuaCodeStyle/blob/master/lua.template.editorconfig
indent_style = space
indent_size = 4
tab_width = 4

call_arg_parentheses = keep
quote_style = double
align_table_field_to_first_field = true

[*.{json,js}]
indent_size = 2
